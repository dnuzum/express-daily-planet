<!-- views/articles/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="well">
        
            <h1>Articles</h1>
                <% articles.forEach(function( article, idx){ %>
                    <div class="showArticles">
                        <h2>
                            <a href="articles/<%= idx %>">
                            <%= article.title %>
                            </a>    
                        </h2>
                        <p>  
                            <%= article.body %> 
                        </p>
                    </div>
                <% }); %>
   
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>